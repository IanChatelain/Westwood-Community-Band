# Copy to .env.local and run: npm run setup:local
# Then: docker compose up -d  (for MinIO), npm run dev

# --- Local Turso (SQLite file) ---
TURSO_DATABASE_URL=file:.data/local.db
# TURSO_AUTH_TOKEN not needed for file:

# --- Local S3 (MinIO via docker compose) ---
S3_ENDPOINT=http://127.0.0.1:9000
R2_ACCESS_KEY_ID=minioadmin
R2_SECRET_ACCESS_KEY=minioadmin
R2_BUCKET_NAME=cms-uploads
R2_PUBLIC_URL=http://127.0.0.1:9000/cms-uploads

# --- Auth (required for login) ---
AUTH_SECRET=local-dev-secret-change-in-production

# --- Seed admin user (optional; run npm run db:seed after first push) ---
# SEED_ADMIN_EMAIL=admin@example.com
# SEED_ADMIN_PASSWORD=your-password
